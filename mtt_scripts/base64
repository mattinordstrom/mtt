#!/bin/bash

if [ $# -eq 0 ] || [ -z "$1" ]; then
  printf "No string specified. Usage: mtt base64 <string>"
else
  tput setaf 6; printf "ENCODED: "; tput sgr0; echo $1 | base64
  tput setaf 6; printf "DECODED: "; tput sgr0; echo $1 | base64 --decode
fi

# Example encode from clipboard
# mtt base64 $(mtt fromc)
